<?xml version="1.0" encoding="utf-8"?><LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_weight="1"        android:orientation="horizontal">        <TextView            android:layout_gravity="center"            android:layout_width="0dp"            android:text="Chọn hàng"            android:paddingLeft="50dp"            android:layout_height="wrap_content"            android:layout_weight="1"></TextView>        <Spinner            android:layout_gravity="center"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="2"/>    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_weight="1"        android:orientation="horizontal">        <TextView            android:layout_gravity="center"            android:layout_width="0dp"            android:text="Sô lượng"            android:paddingLeft="50dp"            android:layout_height="wrap_content"            android:layout_weight="1"></TextView>        <EditText            android:layout_gravity="center"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1"            android:hint="Nhập số lượng"            android:padding="10dp"            android:gravity="center"            android:background="@drawable/bg_corner_edt"/>    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_weight="1">        <Button            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginLeft="50dp"            android:layout_marginRight="50dp"            android:text="Thêm"            android:background="@drawable/bg_corner_btn"            android:layout_gravity="center"/>    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_weight="6">        <androidx.recyclerview.widget.RecyclerView            android:layout_width="match_parent"            android:layout_height="match_parent"/>    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_weight="1"        android:orientation="horizontal">        <Button            android:layout_gravity="center"            android:layout_width="0dp"            android:text="Xuất hàng"            android:background="@drawable/bg_corner_btn"            android:layout_height="wrap_content"            android:layout_weight="1"></Button>        <Spinner            android:layout_gravity="center"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="2"/>    </LinearLayout></LinearLayout>