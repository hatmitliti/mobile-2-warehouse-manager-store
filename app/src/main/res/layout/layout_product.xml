<?xml version="1.0" encoding="utf-8"?><LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical">    <LinearLayout        android:gravity="center"        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_weight="2">        <ImageView            android:id="@+id/imgSPLayoutProduct"            android:layout_width="140dp"            android:layout_height="match_parent"            android:src="@drawable/ic_launcher_background"/>    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_weight="1"        android:orientation="horizontal"        android:gravity="center">        <TextView            android:layout_width="0dp"            android:layout_weight="1"            android:text="Tên:"            android:paddingLeft="30dp"            android:textSize="25sp"            android:layout_height="wrap_content"/>        <EditText            android:id="@+id/edtTenSPLayoutProduct"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="2"            android:textSize="30sp"            android:layout_marginRight="10dp"            android:background="@drawable/bg_corner_edt"/>    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_weight="1"        android:gravity="center">        <TextView            android:layout_width="0dp"            android:layout_weight="1"            android:text="Giá:"            android:paddingLeft="30dp"            android:textSize="25dp"            android:layout_height="wrap_content"/>        <EditText            android:id="@+id/edtGiaSPLayoutProduct"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="2"            android:textSize="30sp"            android:layout_marginRight="10dp"            android:background="@drawable/bg_corner_edt"/>    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_weight="1"        android:gravity="center">        <TextView            android:layout_width="0dp"            android:layout_weight="1"            android:text="Hãng:"            android:paddingLeft="30dp"            android:textSize="25dp"            android:layout_height="wrap_content"/>       <Spinner           android:id="@+id/spnManufacturerLayoutProduct"           android:layout_marginRight="10dp"           android:layout_weight="1"           android:layout_width="wrap_content"           android:layout_height="wrap_content"           />    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_weight="1"        android:gravity="center">        <TextView            android:layout_width="0dp"            android:layout_weight="1"            android:text="Loại:"            android:paddingLeft="30dp"            android:textSize="25dp"            android:layout_height="wrap_content"/>        <Spinner            android:id="@+id/spnCategoryLayoutProduct"            android:layout_marginRight="10dp"            android:layout_weight="1"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            />    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_weight="1"        android:orientation="horizontal"        android:gravity="center">        <Button            android:id="@+id/btnThemSPLayoutProduct"            android:layout_width="130dp"            android:layout_height="wrap_content"            android:layout_marginRight="50dp"            android:layout_marginLeft="50dp"            android:text="Thêm"            android:textSize="20sp"            android:background="@drawable/bg_corner_btn"/>        <Button            android:id="@+id/btnSuaSPLayoutProduct"            android:layout_width="130dp"            android:layout_height="wrap_content"            android:layout_marginRight="50dp"            android:layout_marginLeft="50dp"            android:text="Sửa"            android:textSize="20sp"            android:background="@drawable/bg_corner_btn"/>    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_weight="5">       <ListView           android:id="@+id/lvLayoutProduct"           android:layout_width="match_parent"           android:layout_height="wrap_content"/>    </LinearLayout></LinearLayout>