<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgProducts"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="7"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:paddingLeft="5dp">

            <TextView
                android:id="@+id/txtnameProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="2"
                android:text="Tên sản phẩm"
                android:textColor="@color/black"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtProceProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10 000 VNĐ"
                android:textColor="#FF0000"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtKhoProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kho: "
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txtDaBan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đã bán: "
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtLoaiProduct"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:text="Đồ uống chứa cồn"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtHangProduct"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="right"
            android:paddingRight="10dp"
            android:text="Sabeco"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>