<?xml version="1.0" encoding="utf-8"?><LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent">    <ScrollView        android:layout_width="match_parent"        android:layout_height="match_parent">        <LinearLayout            android:layout_width="match_parent"            android:layout_height="match_parent"            android:orientation="vertical">            <LinearLayout                android:layout_width="match_parent"                android:layout_height="130dp"                android:orientation="vertical">                <Button                    android:id="@+id/backLayoutCustomer"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:text="Back" />                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:text="Quản Lí Người Dùng"                    android:textSize="30dp"                    android:layout_gravity="center"                    android:textStyle="bold"/>            </LinearLayout>            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:orientation="horizontal">                <EditText                    android:id="@+id/edtTimUser"                    android:layout_width="280dp"                    android:layout_height="wrap_content"/>                <Button                    android:id="@+id/btnTimUser"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_weight="1"                    android:text="Tìm"/>            </LinearLayout>            <ListView                android:id="@+id/lvListUser"                android:layout_width="match_parent"                android:layout_height="450dp" />            <Button                android:id="@+id/btnThemTaiKhoan"                android:layout_width="match_parent"                android:layout_height="50dp"                android:text="Thêm Tài Khoản"/>        </LinearLayout>    </ScrollView></LinearLayout>