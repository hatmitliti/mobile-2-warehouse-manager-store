<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical">    <androidx.appcompat.widget.Toolbar        android:id="@+id/toolbar"        android:layout_width="match_parent"        android:layout_height="?attr/actionBarSize"        android:background="#FF5722"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent"        app:title="Quản Lí Người Dùng" />    <LinearLayout        android:layout_weight="1.4"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:orientation="vertical">        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:orientation="horizontal">            <EditText                android:id="@+id/edtTimUser"                android:layout_width="280dp"                android:layout_height="wrap_content" />            <Button                android:id="@+id/btnTimUser"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_weight="1"                android:text="Tìm" />        </LinearLayout>        <ListView            android:id="@+id/lvListUser"            android:layout_width="match_parent"            android:layout_height="wrap_content" />    </LinearLayout>    <Button        android:layout_weight="8.9"        android:id="@+id/btnThemTaiKhoan"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:text="Thêm Tài Khoản" /></LinearLayout>