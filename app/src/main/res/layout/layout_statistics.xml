<?xml version="1.0" encoding="utf-8"?><LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_weight="1">        <androidx.appcompat.widget.SearchView            android:layout_width="match_parent"            android:layout_height="match_parent"            android:layout_margin="10dp"></androidx.appcompat.widget.SearchView>    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_weight="9">        <androidx.recyclerview.widget.RecyclerView            android:layout_width="match_parent"            android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>    </LinearLayout></LinearLayout>