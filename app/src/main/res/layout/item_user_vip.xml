<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgUser"
        android:layout_width="140dp"
        android:layout_height="150dp"
        android:src="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/txtNameUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nguyễn Ngọc Trường"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtSDTUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="0126458522"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txtmailUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="truong@gmail.com"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txtDaMuaUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đã mua: 10 000 VNĐ"
            android:textColor="#FF5722"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDiaChiUser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="7dp"
            android:text="5 Đường 19 - Linh Chiểu - Thủ Đức"
            android:textColor="@color/black" />
    </LinearLayout>
</LinearLayout>