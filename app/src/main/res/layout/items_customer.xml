<?xml version="1.0" encoding="utf-8"?><androidx.cardview.widget.CardView    xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:orientation="horizontal">            <TextView                android:textColor="@color/black"                android:gravity="center"                android:id="@+id/tvUserItems"                android:layout_width="300dp"                android:layout_height="50dp"                android:paddingLeft="20dp"                android:text="Peter Parker"                android:textSize="20sp"/>        <LinearLayout            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_weight="1"            android:gravity="center"            android:layout_marginRight="10dp"            android:orientation="horizontal">            <ImageView                android:id="@+id/btnUpdateUser"                android:layout_width="wrap_content"                android:layout_height="50dp"                android:clickable="true"                android:src="@drawable/ic_edit_24"                android:layout_weight="1"/>        </LinearLayout>    </LinearLayout></androidx.cardview.widget.CardView>